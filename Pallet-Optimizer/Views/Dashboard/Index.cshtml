@model List<Pallet_Optimizer.Models.PackagePlanViewModel>
@{
    ViewData["Title"] = "Pakkeplaner";
    Layout = "_Layout";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Mine Pakkeplaner</h2>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createPlanModal">
            <i class="bi bi-plus-circle"></i> Opret Ny Pakkeplan
        </button>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            <h5>Ingen pakkeplaner endnu</h5>
            <p>Kom i gang ved at oprette din første pakkeplan.</p>
        </div>
    }
    else
    {
        <!-- Search Bar -->
        <div class="mb-4">
            <div class="row">
                <div class="col-md-6 col-lg-4">
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="bi bi-search"></i>
                        </span>
                        <input type="text" class="form-control" id="searchInput" placeholder="Søg efter pakkeplan navn..." />
                    </div>
                </div>
            </div>
        </div>

        <!-- Package Plans Grid -->
        <div class="row" id="plansList">
            @foreach (var plan in Model)
            {
                <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 mb-3 plan-card" data-plan-name="@plan.Name.ToLower()">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body p-3">
                            <h6 class="card-title text-truncate mb-2" title="@plan.Name">
                                <i class="bi bi-box-seam text-primary"></i> @plan.Name
                            </h6>
                            <small class="text-muted d-block mb-2">
                                <i class="bi bi-calendar3"></i> @plan.LastModified.ToString("dd/MM/yyyy")
                            </small>
                            <div class="d-flex justify-content-between text-muted small mb-2">
                                <span title="Antal paller"><i class="bi bi-box"></i> @plan.PalletCount</span>
                                <span title="Antal elementer"><i class="bi bi-stack"></i> @plan.TotalElements</span>
                                <span title="Total vægt"><i class="bi bi-speedometer"></i> @plan.TotalWeight.ToString("F0")kg</span>
                            </div>
                        </div>
                        <div class="card-footer p-2 bg-light">
                            <div class="d-flex gap-1 justify-content-center">
                                <a asp-action="EditPlan" asp-route-id="@plan.Id"
                                   class="btn btn-sm btn-outline-primary flex-fill"
                                   title="Rediger pakkeplan">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-controller="Dashboard" asp-action="Settings" asp-route-id="@plan.Id"
                                   class="btn btn-sm btn-outline-secondary flex-fill"
                                   title="Indstillinger">
                                    <i class="bi bi-gear"></i>
                                </a>
                                <button type="button"
                                        class="btn btn-sm btn-outline-danger flex-fill"
                                        data-bs-toggle="modal"
                                        data-bs-target="#deletePlanModal-@plan.Id"
                                        title="Slet pakkeplan">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Delete Confirmation Modal -->
                <div class="modal fade" id="deletePlanModal-@plan.Id" tabindex="-1">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Bekræft sletning</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                Er du sikker på, at du vil slette pakkeplanen <strong>@plan.Name</strong>?
                                <br /><br />
                                <span class="text-danger">Denne handling kan ikke fortrydes.</span>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuller</button>
                                <form asp-action="DeletePlan" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@plan.Id" />
                                    <button type="submit" class="btn btn-danger">Slet pakkeplan</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- No Results Message -->
        <div id="noResults" class="alert alert-warning d-none">
            <i class="bi bi-exclamation-triangle"></i> Ingen pakkeplaner matcher din søgning.
        </div>
    }
</div>

<!-- Create Plan Modal -->
<div class="modal fade" id="createPlanModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Opret Ny Pakkeplan</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="CreatePlan" method="post">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="planName" class="form-label">Pakkeplan Navn</label>
                        <input type="text" class="form-control" id="planName" name="planName" required placeholder="F.eks. Lager Plan 2025" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuller</button>
                    <button type="submit" class="btn btn-primary">Opret</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Real-time search functionality
        document.getElementById('searchInput').addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase().trim();
            const planCards = document.querySelectorAll('.plan-card');
            const noResults = document.getElementById('noResults');
            let visibleCount = 0;

            planCards.forEach(card => {
                const planName = card.getAttribute('data-plan-name');
                if (planName.includes(searchTerm)) {
                    card.classList.remove('d-none');
                    visibleCount++;
                } else {
                    card.classList.add('d-none');
                }
            });

            // Show/hide no results message
            if (visibleCount === 0 && searchTerm !== '') {
                noResults.classList.remove('d-none');
            } else {
                noResults.classList.add('d-none');
            }
        });

        // Clear search on modal open
        document.getElementById('createPlanModal').addEventListener('show.bs.modal', function() {
            document.getElementById('planName').value = '';
        });
    </script>
}