@{
    ViewData["Title"] = "Pallepaknings Indstillinger";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h2>Pallepaknings Indstillinger</h2>
    <hr />

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Optimeringsindstillinger</h5>
            <form method="post">
                <div class="mb-3">
                    <label class="form-label">Max Pallehøjde (mm)</label>
                    <input type="number" class="form-control" step="0.1" value="2000" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Max Vægt pr. Element (kg)</label>
                    <input type="number" class="form-control" step="0.1" value="500" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Max Antal Lag</label>
                    <input type="number" class="form-control" value="5" />
                </div>
                <button type="submit" class="btn btn-primary">Gem Indstillinger</button>
                <a asp-action="Index" class="btn btn-secondary">Tilbage</a>
            </form>
        </div>
    </div>
</div>