@model Pallet_Optimizer.Models.PalletHolder

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Optimize</title>
    
    <script src="https://cdn.babylonjs.com/babylon.js"></script>
    <script src="https://cdn.babylonjs.com/loaders/babylonjs.loaders.min.js"></script>

    <style>
        html, body {
            width: 100%;
            height: 100%;
            margin: 0;
            overflow: hidden;
        }

        #renderCanvas {
            width: 100%;
            height: 100%;
            touch-action: none;
        }
    </style>
</head>

<body>
    <div className="w-72 bg-zinc-900 border-r border-zinc-800 overflow-y-auto">
        <div className="p-4">
            <div className="flex items-center gap-2 mb-4">
                <Layers className="size-4 text-zinc-400" />
                <h2 className="text-zinc-100">Scene</h2>
            </div>
            
            <div className="space-y-4">
                <div className="space-y-2">
                    <label className="text-zinc-300 block">Pallet Type</label>
                    <form id = "palletType" method = "post">
                        <select name="Pallets[@Model.currentPalletIndex].MaterialType" className="w-full bg-zinc-800 border border-zinc-700 rounded px-3 py-2 text-zinc-100" onchange="this.form.submit()">
                        @{
                            foreach(var pallet in Enum.GetValues(typeof(PALLET_MATERIAL_TYPE)))
                            {
                                <option value="@pallet">@pallet</option>
                            }
                        }

                    </select>
                    </form>
                </div>
                    

                <hr className="border-zinc-800" />

                <div className="space-y-3">
                    <div className="flex items-center justify-between">
                        <label className="text-zinc-300">Show Grid</label>
                        <input type="checkbox" defaultChecked className="w-4 h-4" />
                    </div>
                    <div className="flex items-center justify-between">
                        <label className="text-zinc-300">Show Axes</label>
                        <input type="checkbox" defaultChecked className="w-4 h-4" />
                    </div>
                    <div className="flex items-center justify-between">
                        <label className="text-zinc-300">Wireframe</label>
                        <input type="checkbox" className="w-4 h-4" />
                    </div>
                </div>

                <hr className="border-zinc-800" />

                <div className="space-y-2">
                    <label className="text-zinc-300 block">Scale</label>
                    <input type="range" defaultValue={50} max={100} className="w-full" />
                </div>

                <div className="space-y-2">
                    <label className="text-zinc-300 block">Rotation X</label>
                    <input type="range" defaultValue={0} max={360} className="w-full" />
                </div>

                <div className="space-y-2">
                    <label className="text-zinc-300 block">Rotation Y</label>
                    <input type="range" defaultValue={0} max={360} className="w-full" />
                </div>

                <div className="space-y-2">
                    <label className="text-zinc-300 block">Rotation Z</label>
                    <input type="range" defaultValue={0} max={360} className="w-full" />
                </div>
            </div>
        </div>
    </div>
    <canvas id="renderCanvas"></canvas>

    <script>
        const canvas = document.getElementById("renderCanvas");
        const engine = new BABYLON.Engine(canvas, true);

        function createScene() {
            const scene = new BABYLON.Scene(engine);

            const camera = new BABYLON.ArcRotateCamera(
                "camera",
                Math.PI / 2,
                Math.PI / 3,
                4,
                BABYLON.Vector3.Zero(),
                scene
            );
            camera.attachControl(canvas, true);

            const light = new BABYLON.HemisphericLight(
                "light",
                new BABYLON.Vector3(1, 1, 0),
                scene
            );

            const rect = BABYLON.MeshBuilder.CreateBox("box", {
                width: 1,     // X size
                height: 0.2   // Y size
            }, scene);


            scene.registerBeforeRender(() => {
                rect.rotation.y += 0.01;
            });

            return scene;
        }

        const scene = createScene();
        engine.runRenderLoop(() => {
            scene.render();
            console.log(engine.getFps().toFixed(0));
    });

        window.addEventListener("resize", () => engine.resize());
    </script>
</body>
</html>


@{

    
}
